# Environment Configuration for SQLite Setup
# DevicePricePro Configuration

# Database Configuration (SQLite)
DATABASE_URL=sqlite:///database.db
# No PostgreSQL password needed for SQLite

# JWT Configuration
JWT_SECRET_KEY=devicepricepro-jwt-secret-key-change-in-production-2024

# API Configuration
API_BASE_URL=http://localhost:5000

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_ENVIRONMENT=development

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1

# ML Model Configuration
ML_MODEL_PATH=/app/models/lgb_pipeline.pkl

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=/app/uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/predict.log

# Security Configuration
SECRET_KEY=devicepricepro-flask-secret-key-change-in-production-2024
WTF_CSRF_SECRET_KEY=devicepricepro-csrf-secret-key-2024

# SQLite specific settings
SQLITE_DB_PATH=/app/db/database.db

# Development settings
DEBUG_MODE=True
TESTING=False

# Application settings
APP_NAME=DevicePricePro
APP_VERSION=1.0.0

# Redis Configuration (commented out since using SQLite)
# REDIS_PASSWORD=your-secure-redis-password

